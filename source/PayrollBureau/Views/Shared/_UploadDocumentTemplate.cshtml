<div class="modal-header">
    <h3 class="modal-title" id="modal-title">Upload Document</h3>
</div>
<div class="modal-body" id="modal-body">
    <form name="documentUploadForm" novalidate>
        <div class="form-control-required-example">&nbsp;Required</div>
        <br />
        <div class="alert alert-danger validation-summary-errors" ng-show="model.hasErrors()">
            <ul>
                <li ng-repeat="message in model.errorMessages track by $index"><span ng-bind="message"></span></li>
            </ul>
        </div>
        <div class="form-horizontal">
            <div class="form-group">
                <label class="control-label col-sm-3">Description</label>
                <div class="col-sm-9">
                    <input class="form-control" type="text" ng-model="model.description"/>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-3">Select File</label>
                <div class="col-sm-9">
                    <input file-upload-on-change="model.onFileChange" type="file" id="Document" name="Document" class="form-control" data-val="true" ng-required="true" required="required" data-val-required="Fit Note file is required." />
                </div>
            </div>
        </div>
    </form>

</div>
<div class="modal-footer">
    <button class="btn btn-success" type="button" ng-click="model.modalSubmit()" ng-disabled="model.submitting">
        <span ng-if="!model.submitting">Submit</span>
        <span ng-if="model.submitting" class="fa fa-circle-o-notch fa-spin fa-1x fa-fw"></span>
    </button>
    <button class="btn btn-default" type="button" ng-click="model.modalClose()" ng-disabled="model.submitting">Close</button>
</div>