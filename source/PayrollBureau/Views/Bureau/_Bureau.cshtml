@model PayrollBureau.Models.BureauViewModel
@{

    bool isEdit = (string)ViewData["mode"] == "edit";
}
<div class="row ">
    @if (ViewContext.ViewData.ModelState.Any(x => x.Key == ""))
    {
        <div class="form-group">
            <div class="row xs-mt-20">
                <div class="col-md-6 col-sm-12 col-xs-12 col-md-offset-3">
                    <div class="validation-summary-errors row alert alert-danger" data-valmsg-summary="false">
                        <ul class="errors">
                            @Html.ValidationSummary(true, null, new { @class = "" })
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    }

    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.Label("Name", new { @class = "col-md-4 control-label" })
        <div class="col-md-4">
            @Html.TextBoxFor(m => m.Bureau.Name, new { @class = "form-control", @rows = 3 })
            @Html.ValidationMessageFor(m => m.Bureau.Name, "", new { @class = "help-block" })
        </div>
    </div>
    @if (!isEdit)
    {
        <div class="form-group">
            @Html.Label("Email", new { @class = "col-md-4 control-label" })
            <div class="col-md-4">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @rows = 3 })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "help-block" })
            </div>
        </div>
    }
    @Html.HiddenFor(m => m.Bureau.BureauId)
</div>
