@model PayrollBureau.Models.EmployerViewModel
@{

    bool isEdit = (string)ViewData["mode"] == "edit";
}
<div class="row ">
    @if (ViewContext.ViewData.ModelState.Any(x => x.Key == ""))
    {
        <div class="form-group">
            <div class="row xs-mt-20">
                <div class="col-md-6 col-sm-12 col-xs-12 col-md-offset-3">
                    <div class="validation-summary-errors row alert alert-danger" data-valmsg-summary="false">
                        <ul class="errors">
                            @Html.ValidationSummary(true, null, new { @class = "" })
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    }

    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.Label("Bureau Name", new { @class = "col-md-4 control-label" })
        <div class="col-xs-4 col-sm-4">
            <span class="form-control">@Model.BureauName</span>
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Name", new { @class = "col-md-4 control-label" })
        <div class="col-md-4">
            @Html.TextBoxFor(m => m.Employer.Name, new { @class = "form-control", @rows = 3 })
            @Html.ValidationMessageFor(m => m.Employer.Name, "", new { @class = "help-block" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Address 1", new { @class = "col-md-4 control-label" })
        <div class="col-md-4">
            @Html.TextBoxFor(m => m.Employer.Address1, new { @class = "form-control", @rows = 3 })
            @Html.ValidationMessageFor(m => m.Employer.Address1, "", new { @class = "help-block" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Address 2", new { @class = "col-md-4 control-label" })
        <div class="col-md-4">
            @Html.TextBoxFor(m => m.Employer.Address2, new { @class = "form-control", @rows = 3 })
            @Html.ValidationMessageFor(m => m.Employer.Address2, "", new { @class = "help-block" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Address 3", new { @class = "col-md-4 control-label" })
        <div class="col-md-4">
            @Html.TextBoxFor(m => m.Employer.Address3, new { @class = "form-control", @rows = 3 })
            @Html.ValidationMessageFor(m => m.Employer.Address3, "", new { @class = "help-block" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Address 4", new { @class = "col-md-4 control-label" })
        <div class="col-md-4">
            @Html.TextBoxFor(m => m.Employer.Address4, new { @class = "form-control", @rows = 3 })
            @Html.ValidationMessageFor(m => m.Employer.Address4, "", new { @class = "help-block" })
        </div>
    </div>
    @if (!isEdit)
    {
        <div class="form-group">
            @Html.Label("Email", new { @class = "col-md-4 control-label" })
            <div class="col-md-4">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @rows = 3 })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "help-block" })
            </div>
        </div>
    }
    @Html.HiddenFor(m => m.BureauId)
    @Html.HiddenFor(m => m.BureauName)
    @Html.HiddenFor(m => m.Employer.EmployerId)
</div>
